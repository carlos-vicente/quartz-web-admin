<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>QuartzWebAdmin</title>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css"
          rel="stylesheet"
          href="@Url.Content("extLib/materialize/css/materialize.min.css")"
          media="screen,projection" />

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!--Import jQuery before materialize.js-->
    <script type="text/javascript"
            src="@Url.Content("extLib/jquery/jquery.js")">
    </script>
    <script type="text/javascript"
            src="@Url.Content("extLib/materialize/js/materialize.js")">
    </script>

    <script type="text/javascript">
        jQuery(document).ready(function () {
            $(".button-collapse").sideNav();
        });

        $(document).ready(function() {
            $('.collapsible').collapsible();
        });
    </script>
</head>
<body>
    <nav>
        <div class="nav-wrapper">
            <a href="~/" class="brand-logo center">Home</a>
            <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
            <ul class="left hide-on-med-and-down">
                <li class="bold"><a href="/jobs">Jobs</a></li>
                <li class="bold"><a href="/triggers">Triggers</a></li>
            </ul>
            <ul class="side-nav" id="mobile-demo">
                <li class="bold"><a href="/jobs">Jobs</a></li>
                <li class="bold"><a href="/triggers">Triggers</a></li>
            </ul>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>
    
</body>
</html>